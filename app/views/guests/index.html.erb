<div class="container h-100">
  <div class="row align-items-center h-100 login ">

    <div class="mx-auto">

      <% if flash[:error] %>
        <div class="alert alert-warning alert-dismissible fade show">
          <strong>ERROR! </strong><%= flash[:error] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <div class="card">

        <h5 class="card-header info-color white-text text-center py-4">
          CONFIRMAR ASISTENCIA
        </h5>

        <!--Card content-->
        <div class="card-body">

          <!-- Form -->

          <%= form_tag({controller: "guests", action: "create", method: "post"}, class: "text-center", style: "color: #757575;") do %>

            <p>Ingresa tu direccion de correo electr√≥nico para confirmar tu asistencia</p>

            <div>
              <label for="guestEmail" class="sr-only">Email</label>
              <input
                type="email"
                id="guestEmail"
                name="guest_email"
                class="form-control"
                placeholder="Email"
                style="outline: 0; border-width: 0 0 1px; box-shadow: none; border-radius: 0 !important"
                required autofocus>
            </div>

            <%= submit_tag 'ENTRAR', class: 'btn btn-outline-info btn-rounded z-depth-0 my-4 waves-effect' %>

          <% end %>
          <!-- Form -->

        </div>

      </div>
    </div>
  </div>
</div>